  <section id="users">
    <h1>Users API</h1>
    <hr/>
      <article id="get_user">
        <h3>Get a single user</h3>
        <code>GET /users/:username</code>
        <pre><strong>Response</strong>
          <code class="language-javascript">
  Status 200 OK
  {
    "username": "bob",
    "email": "bob@me.com",
    "workmates": []
  }
          </code>
        </pre>
    </article>
    <hr/>

    <article id="get_auth_user">
        <h3>Get the authenticated user</h3>
        <code>GET /user</code>
        <p>Returns the authenticated user based on the authentication credentials</p>
        <pre><strong>Response</strong>
          <code class="language-javascript">
  Status 200 OK
  {
    "username": "bob",
    "email": "bob@me.com",
    "projects": [
      {
        "id":5,
        "title":"Testfertsch",
        "desc":"A sample project",
        "due_date":"2012-12-01T00:00:00+01:00"
      },{
        "id":6,
        "title":"Nonichfertsch",
        "desc":"A second sample project",
        "due_date":"2012-11-01T00:00:00+01:00"
      }],
    "workmates":[]
  }
          </code>
        </pre>
    </article>
    <hr/>

    <article id="create_user">
      <h3>Create a new user</h3>
        <code>POST /users</code>
        <pre><strong>Input</strong>
          <code>
  <strong>username</strong> - required string
  <strong>password</strong> - required string
  <strong>password_confirmation</strong> - required string
  <strong>email</strong> - required string
          </code>
        </pre>
        <pre><strong>Response</strong>
        <code class="language-javascript">
  Status 201 CREATED
  {
    "username": "luigi",
    "email": "luigi@me.com",
    "projects": [],
    "workmates": []
  }
        </code>
      </pre>

    </article>
    <hr/>

    <article id="update_user">
      <h3>Update the authenticated user</h3>
        <code>PUT /user</code>
        <pre><strong>Input</strong>
          <code>
  <strong>username</strong> - optional string
  <strong>email</strong> - optional string
          </code>
        </pre>
        <pre><strong>Response</strong>
        <code class="language-javascript">
  Status 204 NO CONTENT
        </code>
      </pre>
    </article>
    <hr/>

    <article id="delete_user">
      <h3>Delete the authenticated user</h3>
        <code>DELETE /user</code>
        <pre><strong>Response</strong>
        <code class="language-javascript">
  Status 204 NO CONTENT
        </code>
      </pre>
    </article>

  </section>

